<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFFFFF">

    <!-- Logo at the top, using a bus icon placeholder -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@mipmap/ic_logo" />

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Welcome to Safar !"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <!-- Central image with character, using a bus icon placeholder -->
    <ImageView
        android:id="@+id/characterImageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@id/welcomeTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@mipmap/ic_launcher" />

    <!-- Sign In Button -->
    <Button
        android:id="@+id/to_signin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/characterImageView"
        android:layout_marginStart="100dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_corners"
        android:color="#5669FF"
        android:textColor="#ffffff"
        android:text="SIGN IN" />


</RelativeLayout>
