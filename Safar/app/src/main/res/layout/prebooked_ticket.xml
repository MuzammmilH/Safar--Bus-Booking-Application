<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:backgroundTint="#dedede"
    android:background="@drawable/black_border">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:backgroundTint="#4e4e41"
        android:background="@drawable/black_border">

        <!-- First Line: Bus Name and Seats Left -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:backgroundTint="#edeef2"
            android:gravity="start"
            android:padding="8dp"
            android:background="@drawable/black_border">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seat No: "
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                android:layout_marginStart="70dp"/>
            <!-- Seats Left with AC indication -->
            <TextView
                android:id="@+id/seats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seats No here"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                android:layout_marginStart="10dp"/>

        </LinearLayout>

        <!-- Second Line: Departure Time, Travel Time, Arrival Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:backgroundTint="#edeef2"
            android:gravity="start"
            android:padding="8dp"
            android:background="@drawable/black_border"
            >

            <!-- Time of Departure -->
            <TextView
                android:id="@+id/departureTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="|--------"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginStart="15dp"/>




            <!-- Travel Time -->
            <TextView
                android:id="@+id/travelTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginStart="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="--------|"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginStart="15dp"/>
            <!-- Time of Arrival -->
            <TextView
                android:id="@+id/arrivalTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginStart="15dp"/>

        </LinearLayout>

        <!-- Third Line: Departure Place Name and Arrival Place Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:paddingBottom="10dp"
            android:backgroundTint="#edeef2"
            android:padding="8dp"
            android:background="@drawable/black_border">

            <!-- Departure Place Name -->
            <TextView
                android:id="@+id/departurePlaceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#454545"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:padding="8dp"
                android:background="@drawable/black_border"/>

            <!-- Arrival Place Name -->
            <TextView
                android:id="@+id/arrivalPlaceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#454545"
                android:layout_marginTop="16dp"
                android:layout_marginStart="160dp"
                android:padding="8dp"
                android:background="@drawable/black_border"/>

        </LinearLayout>

        <!-- Fourth Line: One Way Info and Price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:padding="16dp"
            android:backgroundTint="#edeef2"
            android:background="@drawable/rounded_rectangle"
            android:layout_marginTop="16dp"
            >

            <!-- One Way Text -->
            <TextView
                android:id="@+id/oneWayTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"/>

            <!-- Price -->
            <TextView
                android:id="@+id/priceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
