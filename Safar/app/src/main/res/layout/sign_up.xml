<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="30">

    <!-- Sign-up Details (Username, Email, Password, Confirm Password, Sign-up Button) -->
    <ImageView
        android:layout_width="440dp"
        android:layout_height="140dp"
        android:layout_weight="10"
        android:background="#ffffff"
        android:src="@mipmap/ic_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="15"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="155dp"
            android:text="Sign Up"
            android:textColor="#101a5b"
            android:textSize="25sp" />

        <!-- EditText with rounded background for username -->
        <TextView
            android:id="@+id/usernameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:text="Username"
            android:textColor="#101a5b"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/usernameEditText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_rectangle"
            android:hint="Enter Your Username"
            android:padding="12dp" />

        <!-- EditText with rounded background for email -->
        <TextView
            android:id="@+id/emailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:text="Email"
            android:textColor="#101a5b"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/emailEditText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_rectangle"
            android:hint="Enter Your Email"
            android:inputType="textEmailAddress"
            android:padding="12dp" />

        <!-- EditText with rounded background for password -->
        <TextView
            android:id="@+id/passwordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:text="Password"
            android:textColor="#101a5b"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/passwordEditText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_rectangle"
            android:hint="Enter Your Password"
            android:inputType="textPassword"
            android:padding="12dp" />

        <!-- EditText with rounded background for password confirmation -->
        <TextView
            android:id="@+id/confirmPasswordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:text="Confirm Password"
            android:textColor="#101a5b"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/confirmPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_rectangle"
            android:hint="Confirm Your Password"
            android:inputType="textPassword"
            android:padding="12dp" />

        <!-- Sign-up Button -->
        <Button
            android:id="@+id/signup1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="25dp"
            android:textColor="#ffffff"
            android:background="@drawable/rounded_button"
            android:text="Sign Up" />

    </LinearLayout>

</LinearLayout>